{
    "manifest_version": 3,
    "name": "ShortTab",
    "description": "adds shortcuts for your tabs",
    "version": "1.0",
    "icons": {
      "16": "img/16x 16logo.png",
      "32": "img/32x 32logo.png",
      "48": "img/48x 48logo.png",
      "128": "img/128 x 128 logo.png"
    },
    "permissions": [
      "storage", "tabs"
    ],
    "action": {
        "default_title": "ShortTab",
        "default_popup": "index.html"
    },
    "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file://*/*"
      ],
        "js": ["scripts/shortcut.js"]
    }
]
  }